% theorem styles and definitions

\declaretheoremstyle[%
 spaceabove = 3ex,%
 spacebelow = 3ex,%
 headfont = \normalfont\bfseries,%
 headpunct = . ,%
 headformat = swapnumber,%
 notefont = \bfseries,%
 notebraces = {(}{)},%
 bodyfont = \itshape,%
 postheadspace = 1em %
]{thmstyle}

\declaretheorem[style=thmstyle, parent=section, name=Theorem]{mytheorem}
\declaretheorem[style=thmstyle, numbered=no, name=Theorem]{mytheorem*}
\declaretheorem[style=thmstyle, sharenumber=mytheorem, name=Lemma]{mylemma}
\declaretheorem[style=thmstyle, sharenumber=mytheorem, name=Corollary]{mycorollary}

